{
  "name": "/nerv/host_template",
  "version": 1,
  "inputs": [
    {
      "name": "address",
      "type": "string"
    },
    {
      "name": "credential",
      "type": "string"
    }
  ],
  "nodes": [
    {
      "name": "agent",
      "type": "/nerv/Agent",
      "parameters": [
        {
          "name": "PKG_URL",
          "value": "http://10.211.55.2:3332/pkg/agent.tar.gz"
        },
        {
          "name": "ROOT",
          "value": "/opt"
        }
      ],
      "dependencies": [
        {
          "type": "contained",
          "target": "host"
        }
      ]
    },
    {
      "name": "host",
      "type": "/nerv/Host",
      "properties": [
        {
          "name": "address",
          "value": {
            "ref": "address"
          }
        },
        {
          "name": "credential",
          "value": {
            "ref": "credential"
          }
        }
      ]
    }
  ]
}
