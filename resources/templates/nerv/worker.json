{
  "name": "/nerv/worker",
  "version": 1,
  "environment": "ssh",
  "inputs": [
    {
      "name": "host_ip_list",
      "type": "string[]"
    },
    {
      "name": "host_credential",
      "type": "string"
    },
    {
      "name": "os",
      "type": "string"
    },
    {
      "name": "elk_version",
      "type": "string",
      "value": "5.2.1"
    }
  ],
  "nodes": [
    {
      "name": "agent",
      "type": "/nerv/cluster/Agent",
      "parameters": [
        {
          "name":"file_repository",
          "value":"http://10.211.55.2:3332"
        },
        {
          "name": "pkg_url",
          "value": "/pkg/nerv/agent-${os}.tgz"
        },
        {
          "name": "root",
          "value": "nerv/"
        }
      ],
      "dependencies": [
        {
          "type": "contained",
          "target": "host"
        }
      ]
    },
    {
      "name": "log",
      "type": "/nerv/cluster/Log",
      "parameters": [
        {
          "name":"os",
          "value":"${os}"
        },
        {
          "name":"elk_version",
          "value":"${elk_version}"
        },
        {
          "name":"file_repository",
          "value":"http://10.211.55.2:3332"
        },
        {
          "name": "pkg_url",
          "value": "/pkg/log-${os}.tgz"
        },
        {
          "name": "root",
          "value": "nerv/"
        },
        {
          "name": "config_url",
          "value": "/config/nerv/cluster/log/config/filebeat.yml"
        }
      ],
      "dependencies": [
        {
          "type": "contained",
          "target": "host"
        }
      ]
    },
    {
      "name": "host",
      "type": "/nerv/cluster/Host",
      "parameters": [
        {
          "name": "agent",
          "type": "/nerv/standalone/Agent",
          "parameters": [
            {
              "name": "pkg_url",
              "value": "../../pkg/nerv/agent-${os}.tgz"
            },
            {
              "name": "root",
              "value": "nerv/"
            }
          ],
          "dependencies": [
            {
              "type": "contained",
              "target": "host"
            }
          ]
        },
        {
          "name": "root",
          "value": "nerv"
        },
        {
          "name": "address",
          "value": "${host_ip_list}"
        },
        {
          "name": "credential",
          "value": "${host_credential}"
        }
      ]
    }
  ]
}
