{
  "name": "/nerv/worker_cluster",
  "version": 1,
  "nodes": [
    {
      "name": "lvs_ds",
      "type": "nerv/lvs/DirectServer",
      "parameters": [
        {
          "name": "pkg_root",
          "value": "http://10.211.55.2:3332/pkg"
        },
        {
          "name": "pkg_url",
          "value": "/ipvsadm.rpm"
        },
        {
          "name": "root",
          "value": "./"
        },
        {
          "name": "config_root",
          "value": "http://10.211.55.2:3332/config"
        },
        {
          "name": "config_url",
          "value": "/agent/config.json"
        }
      ],
      "dependencies": [
        {
          "type": "contained",
          "target": "lvs_host"
        }
      ]
    },
    {
      "name": "lvs_host",
      "type": "/nerv/cluster/Host",
      "parameters": [
        {
          "name": "address",
          "value": "${lvs_ip_list}"
        }
      ]
    },
    {
      "name": "mysql",
      "type": "/nerv/db/MySQL",
      "parameters": [
        {
          "name": "pkg_root",
          "value": "http://10.211.55.2:3332/pkg"
        },
        {
          "name": "pkg_url",
          "value": "/mysql_server.rpm"
        },
        {
          "name": "root",
          "value": "./"
        },
        {
          "name": "config_root",
          "value": "http://10.211.55.2:3332/config"
        },
        {
          "name": "config_url",
          "value": "/agent/config.json"
        }
      ],
      "dependencies": [
        {
          "type": "contained",
          "target": "host"
        }
      ]
    },
    {
      "name": "mysql_host",
      "type": "/nerv/cluster/Host",
      "parameters": [
        {
          "name": "address",
          "value": "${mysql_ip_list}"
        }
      ]
    }
  ]
}
